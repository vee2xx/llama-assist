{
  "manifest_version": 3,
  "name": "Llama Assist",
  "description": "An extension that runs JavaScript generated by an LLM to perform a wide variety of tasks",
  "version": "1.0",
  "icons": {
    "16": "images/llama_16.png",
    "32": "images/llama_32.png",
    "48": "images/llama_48.png",
    "128": "images/llama_128.png"
  },
  "action": {
    "default_popup": "popup/llama-assist.html",
    "default_icon": {
      "16": "images/llama_16.png",
      "32": "images/llama_32.png",
      "48": "images/llama_48.png",
      "128": "images/llama_128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://*/"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
